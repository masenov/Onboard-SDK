{
    "cfg":
    {
        "modes":
        {
            "scope":
            {
                "title":"Scope",
                "machine":"machine_scope",
                "current_view":"main",
                "views":
                {
                    "main":
                    {
                        "layout":
                        {
                            "trace":
                            {
                                "type":"Drawing_Surface",
                                "mode":"trace",
                                "size":[1000,510],
                                "pos":[30,30],
                                "scale":{"y":2},
                                "markers":
                                {
                                    "trigger_marker":
                                    {
                                        "colour":"red",
                                        "type":"h_line",
                                        "level":128
                                    }
                                },
                                "refs":
                                {
                                    "t":{"ch":{"active":"trace"}}
                                }
                            },
                            "v_offset":
                            {
                                "type":"Button",
                                "size":"big",
                                "label":"Span Offset",
                                "suffix":"v",
                                "pos":[1048,252],
                                "on_scroll_up":["move_range(0.2)"],
                                "on_scroll_down":["move_range(-0.2)"],
                                "refs":
                                {
                                    "data":{"range":"offset"}
                                }
                            },
                            "range_high":
                            {
                                "type":"Button",
                                "size":"big",
                                "label":"Span (High)",
                                "suffix":"v",
                                "pos":[1048,30],
                                "refs":
                                {
                                    "data":{"range":"high"}
                                },
                                "on_scroll_up":["adjust_range('high',0.2)"],
                                "on_scroll_down":["adjust_range('high',-0.2)"]
                            },
                            "range_low":
                            {
                                "type":"Button",
                                "size":"big",
                                "label":"Span (low)",
                                "suffix":"v",
                                "pos":[1048,476],
                                "refs":
                                {
                                    "data":{"range":"low"}
                                },
                                "on_scroll_up":["adjust_range('low',0.2)"],
                                "on_scroll_down":["adjust_range('low',-0.2)"]
                            },
                            "awg":
                            {
                                "type":"Button",
                                "size":"big",
                                "label":"Waveform",
                                "pos":[30,556],
                                "on_scroll_up":["step_waveform(1)"],
                                "on_scroll_down":["step_waveform(-1)"],
                                "strings":
                                {
                                    "0":"Sinusoid",
                                    "1":"Triangle",
                                    "2":"Exponential",
                                    "3":"Square"
                                },
                                "refs":{"text":"waveform"}
                            },
                            "frequency":
                            {
                                "type":"Button",
                                "size":"big",
                                "label":"Frequency",
                                "rounding":2,
                                "suffix":"kHz",
                                "pos":[204,556],
                                "on_click":["snap_frequency()"],
                                "on_scroll_up":["adjust_frequency(m_x * 0.01)"],
                                "on_scroll_down":["adjust_frequency(m_x * -0.01)"],
                                "refs":{"data":"frequency"}
                            },
                            "symetry":
                            {
                                "type":"Button",
                                "size":"big",
                                "label":"Symetry",
                                "rounding":2,
                                "suffix":"%",
                                "pos":[378,556],
                                "on_click":["snap_symetry()"],
                                "on_scroll_up":["adjust_symetry(m_x * 0.1)"],
                                "on_scroll_down":["adjust_symetry(m_x * -0.1)"],
                                "refs":{"data":"symetry_percentage"}
                            },
                            "on_time":
                            {
                                "type":"Button",
                                "size":"big",
                                "label":"On Time",
                                "rounding":2,
                                "suffix":"us",
                                "pos":[204,620],
                                "on_click":["snap_on_off_time('on')"],
                                "on_scroll_up":["adjust_on_off_time('on',m_x * 0.1)"],
                                "on_scroll_down":["adjust_on_off_time('on', m_x * -0.1)"],
                                "refs":{"data":"on_time"}
                            },
                            "off_time":
                            {
                                "type":"Button",
                                "size":"big",
                                "label":"Off Time",
                                "rounding":2,
                                "suffix":"us",
                                "pos":[378,620],
                                "on_click":["snap_on_off_time('off')"],
                                "on_scroll_up":["adjust_on_off_time('off',m_x * 0.1)"],
                                "on_scroll_down":["adjust_on_off_time('off',m_x * -0.1)"],
                                "refs":{"data":"off_time"}
                            },
                            "channel":
                            {
                                "type":"Button",
                                "size":"big",
                                "pos":[552,556],
                                "on_click":["change_channel()"],
                                "strings":
                                {
                                    "a":"Channel A",
                                    "b":"Channel B"
                                },
                                "refs":{"text":"current_channel"}
                            },
                            "timebase":
                            {
                                "type":"Button",
                                "size":"big",
                                "label":"Timebase",
                                "suffix":"ms",
                                "pos":[726,556],
                                "rounding":3,
                                "refs":
                                {
                                    "data":{"timebase":"display"}
                                },
                                "on_scroll_up":["adjust_timebase(5)"],
                                "on_scroll_down":["adjust_timebase(-5)"]
                            },
                            "span":
                            {
                                "type":"Button",
                                "size":"big",
                                "label":"Span",
                                "suffix":"v",
                                "pos":[900, 556],
                                "on_scroll_up":["adjust_span(0.2)"],
                                "on_scroll_down":["adjust_span(-0.2)"],
                                "refs":{"data":{"range":"span"}}
                            },
                            "back":
                            {
                                "type":"Button",
                                "text":"<",
                                "pos":[0,0],
                                "size":[20,20],
                                "on_click":["switch_mode('lobby')"]
                            }
                        }
                    }
                }
            }
        }
    }
}
