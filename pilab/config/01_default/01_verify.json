{
    "cfg":
    {
        "modes":
        {
            "verify":
            {
                "title":"BitScope Micro Verify",
                "machine":"machine_verify",
                "current_view":"pre_test",
                "mode_widgets":
                {
                    "next":
                    {
                        "type":"Button",
                        "text":"NEXT",
                        "font_size":50,
                        "size":[966,128],
                        "pos":[150,525],
                        "colours":
                        {
                            "true":"green",
                            "false":"red"
                        },
                        "strings":
                        {
                            "true":"PASS",
                            "false":"FAIL"
                        },
                        "default_colour":"true"
                    },
                    "op_counter":
                    {
                        "type":"Panel",
                        "size":[25,23],
                        "pos":[1255,697],
                        "refs":
                        {
                            "data":{"test":"op_count"}
                        }
                    }
                },
                "views":
                {
                    "pre_test":
                    {
                        "include_widgets":["next","op_counter"],
                        "layout":
                        {
                            "next":
                            {
                                "on_click":
                                [
                                    "switch_view('comp')",
                                    "switch_operation('comp')"
                                ],
                                "refs":
                                {
                                    "enable":{"device":"connected_not_tested"}
                                }
                            },
                            "test_text":
                            {
                                "type":"Text_Box",
                                "size":[600,200],
                                "font_size":50,
                                "pos":[324,187],
                                "colour":"default_dark",
                                "text_colours":
                                {
                                    "failed":"red",
                                    "passed":"green"
                                },
                                "blocks":
                                {
                                    "connect":"Pre-pack verification\nConnect the product.",
                                    "proceed":"Product connected\nClick NEXT to verify.",
                                    "failed":"VERIFY FAILED.\nDisconnect product.",
                                    "passed":"VERIFY PASSED.\nDisconnect product."
                                },
                                "refs":
                                {
                                    "data":{"test":"status"}
                                }
                            },
                            "to_lobby":
                            {
                                "type":"Button",
                                "size":[50,50],
                                "text":"Quit",
                                "on_click":["switch_mode('lobby')"],
                                "layer":0,
                                "refs":
                                {
                                    "hide":{"device":"connected"}
                                }
                            }
                        }
                    },
                    "comp":
                    {
                        "include_widgets":["next","op_counter"],
                        "layout":
                        {
                            "ch_a":
                            {
                                "type":"Drawing_Surface",
                                "size":[400,400],
                                "pos":[164,93],
                                "mode":"trace",
                                "layer":1,
                                "scale":{"y":0.015},
                                "offset":{"y":150},
                                "slots":
                                {
                                    "colour":true,
                                    "offset":false,
                                    "colours":[[170,140,140],[250,250,0]],
                                    "order":["t","a"]
                                },
                                "refs":
                                {
                                    "a":{"ch":{"a":"display_trace"}},
                                    "t":{"templates":"comp"}
                                }
                            },
                            "ch_b":
                            {
                                "type":"Drawing_Surface",
                                "size":[400,400],
                                "pos":[701,93],
                                "mode":"trace",
                                "layer":1,
                                "scale":{"y":0.015},
                                "offset":{"y":150},
                                "slots":
                                {
                                    "colour":true,
                                    "offset":false,
                                    "colours":[[170,140,140],[0,255,0]],
                                    "order":["t","b"]
                                },
                                "refs":
                                {
                                    "b":{"ch":{"b":"display_trace"}},
                                    "t":{"templates":"comp"}
                                }
                            },
                            "ch_a_sos":
                            {
                                "type":"Panel",
                                "size":"sml_disp",
                                "layer":2,
                                "font_size":40,
                                "pos":[297,417],
                                "alterable":false,
                                "refs":
                                {
                                    "data":{"ch":{"a":"result"}},
                                    "redraw":{"ch":{"a":"display_trace"}}
                                }
                            },
                            "ch_b_sos":
                            {
                                "type":"Panel",
                                "size":"sml_disp",
                                "layer":2,
                                "font_size":40,
                                "pos":[831,417],
                                "alterable":false,
                                "refs":
                                {
                                    "data":{"ch":{"b":"result"}},
                                    "redraw":{"ch":{"b":"display_trace"}}
                                }
                            },
                            "a_pass":
                            {
                                "type":"LED",
                                "size":"led_huge",
                                "layer":0,
                                "pos":[150,77],
                                "size":[430,430],
                                "refs":
                                {
                                    "colour":{"ch":{"a":{"pass":"comp"}}}
                                }
                            },
                            "b_pass":
                            {
                                "type":"LED",
                                "size":"led_huge",
                                "layer":0,
                                "pos":[686,77],
                                "size":[430,430],
                                "refs":
                                {
                                    "data":{"ch":{"b":{"pass":"comp"}}}
                                }
                            },
                            "next":
                            {
                                "on_click":
                                [
                                    "switch_view('pre_test')",
                                    "switch_operation('post_test')"
                                ],
                                "refs":
                                {
                                    "colour":{"results":"comp"},
                                    "text":{"results":"comp"}
                                }
                            }
                        }
                    }
                }
            }
        }
    }
}
